{
  "preset": "ts-jest/presets/default-esm",
  "globals": {
    "ts-jest": {
      "tsconfig": "./tsconfig.json",
      "useESM": true
    }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "/test/.*\\.test\\.ts$",
  "testEnvironment": "miniflare",
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}"
  ],
  "testEnvironmentOptions": {
    "bindings": { "PLANETSCALE_URL": "" }
  }
}